# Active Scholar — Environment Variables
# Copy to .env and fill in your keys

# ── LLM ──
ACTIVE_SCHOLAR_OPENAI_API_KEY=sk-...
ACTIVE_SCHOLAR_ANTHROPIC_API_KEY=sk-ant-...
ACTIVE_SCHOLAR_PRIMARY_MODEL=gpt-4o
ACTIVE_SCHOLAR_FALLBACK_MODEL=claude-sonnet-4-20250514
ACTIVE_SCHOLAR_LLM_TEMPERATURE=0.1

# ── Search ──
ACTIVE_SCHOLAR_TAVILY_API_KEY=tvly-...
ACTIVE_SCHOLAR_SERPER_API_KEY=               # optional fallback

# ── RAG ──
ACTIVE_SCHOLAR_EMBEDDING_MODEL=text-embedding-3-small
ACTIVE_SCHOLAR_CHUNK_SIZE=1000
ACTIVE_SCHOLAR_CHUNK_OVERLAP=200
ACTIVE_SCHOLAR_CHROMA_PERSIST_DIR=./active_scholar_db
ACTIVE_SCHOLAR_RETRIEVAL_TOP_K=20
ACTIVE_SCHOLAR_RELEVANCE_THRESHOLD=0.45

# ── Credibility ──
ACTIVE_SCHOLAR_MIN_CREDIBILITY_SCORE=0.3

# ── Report ──
ACTIVE_SCHOLAR_DEFAULT_SCOPE=moderate
